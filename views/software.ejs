<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= job.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white font-sans">

  <% include partials/header %>

  <main class="max-w-4xl mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold text-pink-500 mb-4"><%= job.title %></h1>
    <p class="text-gray-400 mb-6">
      <i class="fas fa-map-marker-alt mr-1"></i> <%= job.location %> |
      <i class="far fa-clock mx-1"></i> <%= job.type %> |
      <i class="fas fa-money-bill-wave mx-1"></i> <%= job.salary %>
    </p>

    <section class="mb-6">
      <h2 class="text-xl font-semibold mb-2 text-pink-400">Job Description</h2>
      <p class="text-gray-300"><%= job.description %></p>
    </section>

    <section class="mb-6">
      <h2 class="text-xl font-semibold mb-2 text-pink-400">Responsibilities</h2>
      <ul class="list-disc list-inside text-gray-300 space-y-1">
        <% job.responsibilities.forEach(function(res) { %>
          <li><%= res %></li>
        <% }) %>
      </ul>
    </section>

    <section class="mb-6">
      <h2 class="text-xl font-semibold mb-2 text-pink-400">Qualifications</h2>
      <ul class="list-disc list-inside text-gray-300 space-y-1">
        <% job.qualifications.forEach(function(q) { %>
          <li><%= q %></li>
        <% }) %>
      </ul>
    </section>

    <section class="mb-10">
      <h2 class="text-xl font-semibold mb-2 text-pink-400">Apply Now</h2>
      <form id="applyForm" class="space-y-4" method="post" action="/portfolio_submit">
        <input type="text" class="w-full p-3 bg-gray-800 border border-gray-700 rounded" id="fname" name="name" placeholder="Your Name" required>
        <input type="email" class="w-full p-3 bg-gray-800 border border-gray-700 rounded" id="f-email" name="email" placeholder="Your Email" required>
        <input type="text" class="w-full p-3 bg-gray-800 border border-gray-700 rounded" id="f-portfolio" name="url" placeholder="Portfolio URL (Optional)">
        <textarea class="w-full p-3 bg-gray-800 border border-gray-700 rounded" rows="5" id="f-cover" placeholder="Cover Letter"></textarea>
        <button type="submit" class="w-full bg-pink-600 hover:bg-pink-700 font-bold py-3 rounded">Submit Application</button>
      </form>
    </section>
  </main>
  <% include partials/footer %>
  
</body>
</html>