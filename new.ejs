<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>SkillSphere</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body, html {
      margin: 0;
      padding: 0;
      height: 100%;
    }

    .background-slideshow {
      position: fixed;
      width: 100%;
      height: 100%;
      background-size: cover;
      background-position: center;
      z-index: -1;
      transition: background-image 1s ease-in-out;
    }

    .overlay {
      background-color: rgba(0, 0, 0, 0.7);
      min-height: 100vh;
      position: relative;
    }

    .job-panel {
      display: none;
    }

    .group:hover .job-panel {
      display: flex;
    }
  </style>
</head>
<body class="text-white font-sans">
  
  <div class="background-slideshow" id="bg"></div>

  <div class="overlay">
    <header class="flex justify-between items-center p-6 bg-gray-900 bg-opacity-80 relative z-50">
      <div class="text-2xl font-bold text-blue-400">SkillSphere</div>
      <nav class="flex space-x-6 text-sm">
        <a href="#" class="hover:text-pink-400">Hire freelancers</a>

        
        <div class="relative group">
          <a href="#" class="hover:text-pink-400">Find work</a>
          <div class="job-panel absolute top-full left-1/2 transform -translate-x-1/2 mt-2 bg-gray-900 p-6 rounded shadow-xl w-[350px] z-50 text-white">
            <div>
              <h3 class="font-bold mb-3 text-pink-400 text-lg">By Skill</h3>
              <a href="jobDescription/website.ejs" class="block mb-2 hover:text-pink-400">Website jobs</a>
              <a href="jobDescription/graphic.ejs" class="block mb-2 hover:text-pink-400">Graphic Design</a>
              <a href="jobDescription/mobile.ejs" class="block mb-2 hover:text-pink-400">Mobile App Development</a>
              <a href="jobDescription/data.ejs" class="block mb-2 hover:text-pink-400">Data Entry</a>
            </div>
          </div>
        </div>

        <a href="#" class="hover:text-pink-400">Solutions</a>
      </nav>

      <div class="flex space-x-4">
        <a href="login.ejs" class="hover:text-pink-400">Log In</a>
        <!-- <a href="#" class="hover:text-pink-400">Sign Up</a>
        <a href="#" class="bg-pink-600 px-4 py-2 rounded font-semibold hover:bg-pink-700">Post a Project</a> -->
      </div>
    </header>

    <section class="flex flex-col lg:flex-row items-center justify-between px-10 py-20">
      <div class="max-w-xl">
        <h1 class="text-4xl font-bold leading-tight mb-6">Hire the best freelancers for any job, online.</h1>
        <ul class="space-y-2 text-gray-300 text-lg">
          <li>● World's largest freelance marketplace</li>
          <li>● Any job you can possibly think of</li>
          <li>● Save up to 90% & get quotes for free</li>
          <li>● Pay only when you're 100% happy</li>
        </ul>
        <div class="mt-8 flex space-x-4">
          <a href="#" class="bg-pink-600 px-6 py-2 rounded font-bold hover:bg-pink-700">Hire a Freelancer</a>
          <a href="#" class="border border-white px-6 py-2 rounded font-bold hover:bg-white hover:text-black">Earn Money Freelancing</a>
        </div>
      </div>
    </section>

    <footer class="bg-gray-900 bg-opacity-80 text-white px-10 py-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
          <h4 class="font-bold text-xl mb-2">SkillSphere</h4>
          <p class="text-sm">Empowering freelancers and clients around the world. Hire experts or get hired for any job — anytime, anywhere.</p>
        </div>
        <div>
          <h4 class="font-bold text-xl mb-2">Quick Links</h4>
          <ul class="space-y-1 text-sm">
            <li><a href="#" class="hover:text-pink-400">Hire Freelancers</a></li>
            <li><a href="#" class="hover:text-pink-400">Find Work</a></li>
            <li><a href="#" class="hover:text-pink-400">Solutions</a></li>
            <li><a href="#" class="hover:text-pink-400">Post a Project</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-bold text-xl mb-2">Connect with Us</h4>
          <ul class="space-y-1 text-sm">
            <li><a href="#" class="hover:text-pink-400">Facebook</a></li>
            <li><a href="#" class="hover:text-pink-400">Twitter</a></li>
            <li><a href="#" class="hover:text-pink-400">LinkedIn</a></li>
            <li><a href="#" class="hover:text-pink-400">Contact Support</a></li>
          </ul>
        </div>
      </div>
      <div class="border-t border-gray-700 mt-8 pt-4 text-center text-sm text-gray-400">
        © 2025 SkillSphere. All rights reserved.
      </div>
    </footer>
  </div>

  <script>
    const images = [
      "https://media.istockphoto.com/id/1289411982/photo/cyber-security-web-development-and-work-in-it-concept.jpg?s=1024x1024&w=is&k=20&c=N1rb-2617cvdBJ6gWrwC-A7zzjQOYWK4xBg-A7JRD1s=",
      "https://media.istockphoto.com/id/2194165915/photo/hands-typing-on-laptop-with-programming-code-on-screen-representing-software-development.jpg?s=612x612&w=0&k=20&c=ltbqe0f6vKKioxRWtxeMZ2MKhezXV447qyzkaT9polU=",
      "https://media.istockphoto.com/id/2093184239/photo/programming-code-abstract-screen-of-software-developer-working-atmosphere-of-a-programmer-at.jpg?s=612x612&w=0&k=20&c=v6xQTU7yVif0l06IDa9r79b0UksIYx5k_5y3CYqtYrs="
    ];
    let current = 0;
    const bg = document.getElementById("bg");
    function changeBackground() {
      bg.style.backgroundImage = `url('${images[current]}')`;
      current = (current + 1) % images.length;
    }
    changeBackground();
    setInterval(changeBackground, 2000);
  </script>
</body>
</html>
